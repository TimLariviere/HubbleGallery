<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HubbleGalleryFSharp.DetailPage"
             Title="Hubble"
             BackgroundColor="#182D40">
    <ScrollView>
        <StackLayout Spacing="0">
            <Image x:Name="PictureImage" HeightRequest="250" Aspect="AspectFill" />
            <Label x:Name="TitleLabel" TextColor="White" FontSize="22" Margin="10,10,10,0" />
            <Label x:Name="DateLabel" TextColor="#BCBCBC" FontSize="15" Margin="10,0,10,10" />
            <Label x:Name="DescriptionLabel" TextColor="White" FontSize="17" Margin="10,0,10,10" />
        </StackLayout>
    </ScrollView>
</ContentPage>
